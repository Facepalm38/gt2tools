<Window x:Class="GT2.CarInfoEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GT2.CarInfoEditor"
        mc:Ignorable="d"
        Title="CarInfo Editor" Height="350" Width="525">
    <Grid>
        <TreeView x:Name="treeView" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:Car}" ItemsSource="{Binding Colours}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding CarID}" Width="50" />
                        <TextBox Text="{Binding EUName}" Width="200" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type local:CarColour}">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Fill="{Binding HexColour}" Width="20" />
                        <TextBox Text="{Binding LatinName}" Width="200" />
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
